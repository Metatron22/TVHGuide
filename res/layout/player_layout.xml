<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/pl_frame"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <org.tvheadend.tvhguide.TVHVideoView
        android:id="@+id/pl_video"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center" />

    <LinearLayout
        android:id="@+id/pl_header"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:background="#C0000000"
        android:orientation="vertical"
        android:visibility="invisible" >

        <TextView
            android:id="@+id/pl_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="6dp"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/pl_codec"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="3dp"
            android:paddingLeft="6dp"
            android:paddingRight="6dp" />

        <TextView
            android:id="@+id/pl_clock"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:paddingBottom="6dp"
            android:paddingLeft="6dp"
            android:paddingRight="6dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/pl_middle"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical" >

        <ProgressBar
            android:id="@+id/pl_loading"
            style="@android:style/Widget.ProgressBar.Large"
            android:layout_width="fill_parent"
            android:layout_height="42sp" />
    </LinearLayout>

</FrameLayout>